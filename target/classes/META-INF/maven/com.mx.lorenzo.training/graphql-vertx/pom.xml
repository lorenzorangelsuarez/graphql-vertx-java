<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.mx.lorenzo.training</groupId>
  <artifactId>graphql-vertx</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>graphql-vertx</name>
  
  <properties>
    <main.verticle>com.mx.lorenzo.training.main.MainVerticle</main.verticle>
    <vertx.version>3.5.4</vertx.version>
    <graphql-java.version>8.0</graphql-java.version>
  </properties>
  
  <description>graphql vertx server</description>
  <dependencies>
  	<dependency>
  		<groupId>io.vertx</groupId>
  		<artifactId>vertx-web-graphql</artifactId>
  		<version>3.7.0</version>
  	</dependency>
  	<dependency>
  		<groupId>io.vertx</groupId>
  		<artifactId>vertx-core</artifactId>
  		<version>3.7.0</version>
  	</dependency>
  	<dependency>
    	<groupId>com.graphql-java</groupId>
	    <artifactId>graphql-java-servlet</artifactId>
	    <version>4.3.0</version>
  	</dependency>
 	<dependency>
	    <groupId>com.graphql-java</groupId>
	    <artifactId>graphql-java-tools</artifactId>
	    <version>3.2.0</version>
  	</dependency>
  </dependencies>
  <build>
  	<plugins>
  		<plugin>
  			<artifactId>maven-compiler-plugin</artifactId>
  			<version>3.3</version>
  			<configuration>
  				<source>1.8</source>
  				<target>1.8</target>
  			</configuration>
  		</plugin>
  		<plugin>
  			<groupId>org.apache.maven.plugins</groupId>
  			<artifactId>maven-shade-plugin</artifactId>
  			<version>2.3</version>
  			<executions>
  				<execution>
  					<phase>package</phase>
  					<goals>
  						<goal>shade</goal>
  					</goals>
  					<configuration>
  						<transformers>
  							<transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
  								<manifestEntries>
  									<Main-class>io.vertx.core.Starter</Main-class>
  									<Main-Verticle>${main.verticle}</Main-Verticle>
  								</manifestEntries>	
  							</transformer>
  						</transformers>
  						<artifactSet></artifactSet>
  						<outputFile>${project.build.directory}/${project.artifactId}-${project.version}-fat.jar</outputFile>
  					</configuration>
  				</execution>
  			</executions>
  		</plugin>
  	</plugins>
  	<!--  Packing the application in a fat jar is a standalone executable Jar file containing
  	 all the dependencies required to run the application. 
  	 This is a very convenient way to package Vert.x applications as itâ€™s only one file. 
  	 It also make them easy to execute -->
  	 
  </build>
</project>